<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">
    <%= @course.title %>
  </h1>
  <br />
  <%= link_to 'Preview As Student', course_path(@course), class: 'btn btn-warning pull-right' %>
  <br class="clr" />

  <div class="text-center">
    <%= link_to 'Add a new section', new_instructor_course_section_path(@course), class: 'btn btn-primary btn-lg' %>
  </div>
  <br />

  <ul>
    <% @course.sections.each do |section| %>
      <li>
        <%= section.title %>
      </li>
    <% end %>
  </ul>

  <div class="col-sm-4 col-xs-12 text-center">
    <span class="label label-default">
      <%= number_to_currency @course.cost %>
    </span>

    <% if current_user && current_user == @course.user %>
      <br />
      <br />
      <%= link_to 'Administer', instructor_course_path(@course), class: 'btn btn-danger btn-lg' %>
    <% end %>
  </div>

  <div class="col-sm-8 col-xs-12">
    <%= @course.description %>
  </div>
</div>
